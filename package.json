{
  "name": "hardhat-dex",
  "version": "1.0.0",
  "description": "Cross-chain DEX using Ethereum (Sepolia) and Westend Asset Hub with PVM integration",
  "main": "index.js",
  "scripts": {
    "compile:evm": "hardhat compile",
    "compile:pvm": "hardhat compile:pvm",
    "deploy:eth": "hardhat run scripts/deploy-ethereum.ts --network sepolia",
    "deploy:wrapped-token": "hardhat run scripts/deploy-wrapped-token.ts --network westendAssetHub",
    "deploy:wrapped-token-x": "hardhat run scripts/deploy-wrapped-token-x.ts --network westendAssetHub",
    "deploy:price-oracle": "hardhat run scripts/deploy-price-oracle.ts --network westendAssetHub",
    "deploy:westend": "npm run deploy:wrapped-token && npm run deploy:price-oracle",
    "deploy:westend-x": "npm run deploy:wrapped-token-x && npm run deploy:price-oracle-x",
    "deploy": "npm run deploy:eth && npm run deploy:westend",
    "test": "hardhat test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.13.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^20.11.0",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "@polkadot/api": "10.11.2",
    "@polkadot/keyring": "12.6.2",
    "@polkadot/types": "15.9.3",
    "@polkadot/types-codec": "15.9.3",
    "@polkadot/types-create": "15.9.3",
    "@polkadot/types-known": "15.9.3",
    "@polkadot/util": "13.4.4",
    "@polkadot/util-crypto": "13.4.4"
  }
}
